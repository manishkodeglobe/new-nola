{% case media.media_type %}
  {% when 'image' %}
  <img
    src="{{ media | image_url }}"
    width="full"
    height="full"
    loading="lazy">
  {% when 'external_video' %}
  {{ media | external_video_tag: class: "h-96 w-full object-cover" }}

  {% when 'video' %}
  {{ media | video_tag: controls: true, class: "w-full h-90 object-cover" }}{% else %}

{% endcase %}