<div class="container mx-auto homepage_product_slider pt-56 pb-20">


  <!-- Slider main container -->
  <div class="swiper">
    <!-- Additional required wrapper -->

    <div class="swiper-button-prev"></div>
    <div class="swiper-button-next"></div>
    <div class="swiper-wrapper">
      <!-- Slides -->



      {% for product in collection.products %}
        <div class="swiper-slide">
          <div class="w-full py-6 px-3">
            <div class="border bg-white shadow-lg rounded-lg overflow-hidden">

              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <div class="h-100 overflow-hidden">
                    <img
                      src="{{ product.featured_image | image_url }}"
                      class="h-full w-full object-cover    transition duration-1000 ease-in-out hover:scale-105 transform"
                      height="full"
                      width="full"
                      loading="lazy">
                  </div>
                {% else %}
                  {% assign placeholder_images = 'product-1' %}
                  {{ placeholder_images | placeholder_svg_tag: 'h-full w-full object-cover' }}
                {% endif %}
              </a>

              <div class="  flex-col p-5">
                <span class="text-sm text-gray-400">{{ product.vendor }}</span>
                <a href="{{ product.url }}">
                  <h1 class="text-gray-700 uppercase font-medium">{{ product.title }}</h1>
                </a>
                <p class="text-gray-500">{{ product.price | money }}</p>
              </div>

            </div>

          </div>
        </div>
      {% endfor %}

      {% comment %} end slide {% endcomment %}



    </div>



  </div>

</div>