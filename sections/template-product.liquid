<link rel="stylesheet" href="https://unpkg.com/swiper@7/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper@7/swiper-bundle.min.js"></script>

<style>
  .Swiper_Button_For_Product_Slide_prev::after {}
  .Swiper_Button_For_Product_Slide_next::after {}
  .Swiper_Button_For_Product_Slide_prev {
    position: absolute;
    z-index: 5;
    top: 50%;
    cursor: pointer;
  }
  .Swiper_Button_For_Product_Slide_next {
    position: absolute;
    z-index: 5;
    top: 50%;
    right: 0;
    cursor: pointer;
  }
  .swiper-pagination {
    color: black;
    bottom: 0 !important;
  }
  .swiper-pagination-bullet-active {
    background: black !important;
  }
</style>

<div class="container mx-auto my-8">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
    {% comment %} Product Media {% endcomment %}
    <div class="product--medias">
      <div class="hidden md:block">
        {% for media in product.media %}
          <div class="h-100 overflow-hidden p-4">
            {% render 'product-media', media: media %}
          </div>
        {% endfor %}
      </div>

      <div class="md:hidden">
        <div class="swiper h-94">
          <div class="swiper-wrapper">
            {% for media in product.media %}
              <div class="swiper-slide">
                <div class="h-full overflow-hidden">
                  {% render 'product-media', media: media %}
                </div>
              </div>
            {% endfor %}
          </div>

          <div class="swiper-pagination"></div>

          <div class="Swiper_Button_For_Product_Slide_prev">
            {% render 'leftarrow' %}
          </div>
          <div class="Swiper_Button_For_Product_Slide_next">
            {% render 'rightarrow' %}
          </div>
        </div>
      </div>
    </div>
    {% comment %} product form and informations {% endcomment %}
    <div class="product--information">

      {% form 'product', product %}
        <div class="my-3">
          <span class="text-xs text-gray-500">{{ product.vendor }}</span>
        </div>
        <div class="my-3">
          <h1 class="text-3xl text-gray-900">{{ product.title }}</h1>
        </div>



        <div class="my-3">
          {% assign product_price = product.selected_or_first_available_variant %}
          <span class="text-base text-gray-500 line-through">{{ product_price.compare_at_price | money }}</span>
          <span class="text-lg text-gray-500">{{ product_price.price | money }}</span>
          {% if product_price.price < product_price.compare_at_price %}
            <span class="px-5 py-1 text-sm font-bold bg-red-500 rounded-full text-white mx-4">Sale</span>
          {% endif %}

        </div>

        {% comment %} variants  {% endcomment %}
        <div class="my-3">
          {% unless product.has_only_default_variant %}
            <div data-url="{{ product.url }}" data-section="{{ section.id }}">

              {% for option in product.options_with_values %}
                <label for="option-{{ section.id }}-{{ forloop.index0 }}">{{ option.name }}</label>


                <div class="my-3">
                  <select
                    class="border w-full my-2 rounded-full p-2"
                    name="options[{{ option.name | escape }}]"
                    id="option-{{ section.id }}-{{ forloop.index0 }}">


                    {% for value in option.values %}

                      <option value="{{ value | escape }}"{% if option.selected_value == value %}selected="selected"{% endif %}>{{ value }}</option>

                    {% endfor %}



                  </select>
                </div>

              {% endfor %}
            </div>

          {% endunless %}
        </div>

        <div class="my-3">
          <label for="quantity-{{ section.id }}">quantity</label>
          <div class="in">
            <input
              type="number"
              name="quantity"
              id="{{ section.id }}"
              value="1"
              min="1"
              class="border w-full my-2 rounded-full p-2">
          </div>
        </div>


        <p class="text-lg text-gray-500">{{ product.content }}</p>
        <input
          type="submit"
          value="Add To Cart"
          class="w-full h-16 bg-slate-950 text-white my-20">


      {% endform %}


    </div>
  </div>
</div>


<script>
  const swiper = new Swiper('.swiper', {
    direction: 'horizontal',

    pagination: {
      el: '.swiper-pagination'
    },

    navigation: {
      prevEl: '.Swiper_Button_For_Product_Slide_prev',
      nextEl: '.Swiper_Button_For_Product_Slide_next'
    }
  });
</script>