<h1>{{ article.title }}</h1>

<small>{{ article.author }}</small>

<time datetime="{{ article.published_at | date: '%y-%m-%d' }}">{{ article.published_at | date: '%y-%m-%d' }}</time>



<img
  src="{{ article.image | image_url }}"
  loading="lazy"
  width="full"
  height="full">


<p>{{ article.content }}</p>


{% schema %}
  {
    "name": "template Artices",
    "tag": "section",
    "class": "custom",
    "settings": [
      {
        "type": "text",
        "id": "article_Title",
        "label": "Article Title",
        "default": "Enter Title"

      }, {

        "type": "text",
        "id": "article_author",
        "label": "article author",
        "default": "article author name"
      }

    ]
  }
{% endschema %}