<h1>{{ article.title }}</h1>

{% if section.settings.enable_article_authoor_name %}
  <small>{{ article.author }}</small>
{% endif %}


{% if section.settings.enable_article_published_date %}
  <time datetime="{{ article.published_at | date: '%y-%m-%d' }}">{{ article.published_at | date: '%y-%m-%d' }}</time>
{% endif %}



<img
  src="{{ article.image | image_url }}"
  loading="lazy"
  width="full"
  height="full">


<p>{{ article.content }}</p>


{% schema %}
  {
    "name": "template Artices",
    "tag": "section",
    "class": "article_sec",
    "settings": [
      {
        "type": "checkbox",
        "id": "enable_article_authoor_name",
        "label": "Author Name",
        "default": true

      }, {

        "type": "checkbox",
        "id": "enable_article_published_date",
        "label": "Published Date",
        "default": true

      }



    ]
  }
{% endschema %}