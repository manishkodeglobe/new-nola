<article class="py-9">
  {% for block in section.blocks %}
    {% case block.type %}
      {% when 'article_title' %}

      <div class="flex justify-center items-center text-center">
        <div class="max-w-7xl">
          <a
            class="my-5"
            href="{{ blog.url }}"
            class="text-base uppercase text-gray-500 hover:text-gray-900 font-bold">{{ blog.url }}</a>
          <h1 style="font-size: 40px;" class="text-9xl md:text-6xl font-medium ">{{ article.title }}</h1>
        </div>
      </div>


      {% when 'enable_authoor' %}
      <div class="flex justify-center items-center text-center">
        <div class="max-w-7xl ">

          {% if section.settings.authoor_name %}
            <small>{{ article.author }}</small>
          {% endif %}

        </div>
      </div>



      {% when 'published_date' %}

      <div class="flex justify-center items-center text-center ">
        <div class="max-w-7xl text-bold">
          {% if section.settings.published_date %}
            <time datetime="{{ article.published_at | date: formate: 'on_date' }}">{{ article.published_at | date: formate: 'on_date' }}</time>
          {% endif %}
        </div>
      </div>
      {% when 'featured_image' %}
      <div class="max-w-7xl bg-blue-100 rounded-lg mx-2 md:mx-auto overflow-hidden my-6">

        {% if article.image != blank %}

          <img
            class="w-full h-90 md:h-96 object-cover object-center h-80 mx-9 "
            src="{{ article.image | image_url }}"
            loading="lazy"
            width="full"
            height="full">

        {% else %}
          {% assign placeholder_image = 'lifestyle-2' %}
          {{ placeholder_image | placeholder_svg_tag: 'w-full bg-blue-100   h-80  md:h-96 object-cover object-center p-5' }}
        {% endif %}


      </div>
      {% when 'article_content' %}
      <div class="container mx-auto">
        <div class="  px-9">
          {{ article.content }}
        </div>
      </div>
  {% else %}
    {% endcase %}
  {% endfor %}
</article>

{% if blog.comments_enabled? %}

  <div class="comments">
    {% if article.comments_count > 0 %}
      We Have A comments
    {% else %}
      We Dont Have A Comments
    {% endif %}
  </div>{% else %}
{% endif %}

{% comment %} comment form {% endcomment %}
<div class="container mx-auto">
<div id="comment_form" class="mb-8">



  {% form 'new_comment', article %}
    <div class="flex justify-center items-center mx-auto max-w-4xl px-4">
      <div class="px-1 md:flex mb-3">
        <div class="px-3 md:w-1/2">
            <label for="comment_author" class="text-gray-700 font-medium uppercase text-xs mb-2">Name</label>
            <input 
                type="text" 
                name="comment[author]" 
                id="comment_author" 
                class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
                placeholder="Jane Doe"
                required
            >
        </div>
        <div class="px-3 md:w-1/2">
            <label for="comment_email" class="text-gray-700 font-medium uppercase text-xs mb-2">E-mail</label>
            <input 
                type="email" 
                name="comment[email]" 
                id="comment_email" 
                class="w-full text-gray-700 border py-3 px-4 mb-3 focus:outline-none"
                placeholder="jane@doe.com"
                required
            >
        </div>
    </div>
    </div>

    <div class="px-1 md:flex mb-3 justify-center items-center">
        <div class="md:w-full px-3">
            <label for="comment_content" class="text-gray-700 font-medium uppercase text-xs mb-2">Comment</label>
            <textarea class="w-full text-gray-700 resize-none h-20 py-2 px-3 focus:outline-none border" name="comment[body]" id="comment_content" required></textarea>
        </div>
    </div>
    <div class="px-1 md:flex mb-3 justify-center items-center">
        <div class="md:w-full px-3">
            <input type="submit" class="w-full cursor-pointer px-4 py-2 border text-base font-medium text-white bg-gray-900 hover:bg-gray-500" value="Post comment">
        </div>
    </div>
 
    </div>
  {% endform %}

  </div>
</div>



{% schema %}
  {
    "name": "template Artices",
    "tag": "section",
    "class": "article_sec",
    "settings": [
      {
        "type": "checkbox",
        "id": "authoor_name",
        "label": "Author Name",
        "default": true

      }, {

        "type": "checkbox",
        "id": "published_date",
        "label": "Published Date",
        "default": true

      }
    ],
    "blocks": [
      {
        "name": "article title",
        "type": "article_title",
        "limit": 1
      },
      {
        "type": "enable_authoor",
        "name": "Author Name",
        "limit": 1

      },
      {
        "type": "published_date",
        "name": "pulished Date",
        "limit": 1
      },
      {
        "type": "featured_image",
        "name": "thumbnail",
        "limit": 1
      }, {
        "type": "article_content",
        "name": "content",
        "limit": 1
      }
    ]
  }
{% endschema %}