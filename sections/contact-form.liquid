<div class="container mx-auto flex flex-col items center my-6 bg-red-300 h-96 justify-center">
  {% form 'contact' %}

    <label for="contact_name">Name:</label>
    <input
      type="text"
      name="contact[name]"
      id="contact_name">

    <label for="contact_email">Email:</label>
    <input
      type="email"
      name="contact[email]"
      id="contact_email">
    <label for="contact_message">Messages</label>
    <textarea name="contact[body]" id="contact_message"></textarea>

    <input type="submit" value="Submit Message">


  {% endform %}

</div>

{% schema %}
  {
    "name": "contact form",
    "presets": [
      {
        "name": "contact form"
      }
    ]
  }
{% endschema %}