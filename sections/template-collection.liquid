<div class="container mx-auto px-4 py-8">
  {% paginate collection.products by 12 %}
    <h1 class="text-3xl text-center">{{ collection.title }}</h1>
    <div class="max-w-6xl mx-auto">
      <div class="grid grid-cols-4 md:grid-cols-1 gap-4" style="grid-template-columns: repeat(3, 1fr); gap:40px">
        {% for product in collection.products %}
          <div class="w-full py-6 px-3">
            <div class="border bg-white shadow-lg rounded-lg overflow-hidden">

              <a href="{{ product.url }}">
                {% if product.featured_image %}
                  <div class="h-80 overflow-hidden">
                    <img
                      src="{{ product.featured_image | image_url }}"
                      class="h-full w-full object-cover "
                      height="full"
                      width="full"
                      loading="lazy">
                  </div>
                {% else %}
                  {% assign placeholder_images = 'product-1' %}
                  {{ placeholder_images | placeholder_svg_tag: 'h-full w-full object-cover' }}
                {% endif %}
              </a>

              <div class="  flex-col p-5">
                <span class="text-sm text-gray-400">{{ product.vendor }}</span>
                <a href="{{ product.url }}">
                  <h1 class="text-gray-700 uppercase font-medium">{{ product.title }}</h1>
                </a>
                <p class="text-gray-500">{{ product.price | money }}</p>
              </div>

            </div>

          </div>

        {% else %}
          <div class="font-bold flex justify-center items-center">
            <h1>There Are No Product In Your Collection</h1>
          </div>
        {% endfor %}

      </div>
    </div>
  {% endpaginate %}
</div>