<div class="list_collections_section">

  <div class="container mx-auto">
    <div class="flex flex-col py-9 items-center">
      <h1 class="text-3xl font-medium">{{ section.settings.title }}</h1>

      <div class="max-w-7xl mx-auto my-3">


        <div class="grid grid-cols-1 md:grid-cols-3 gap-3">
          {% for collection in collections %}

            {% if collection.all_products_count > 0 %}

              <div class="w-full py-6 px-3">
                <div class="border bg-white overflow-hidden">
                  <a href="{{ collection.url }}">
                    <div class="h-80 overflow-hidden">
                      {% if collection.featured_image != blank %}
                        {% assign collection_image = collection.featured_image %}
                      {% else %}
                        {% assign collection_image = collections.products.first.image %}
                      {% endif %}

                      <img
                        class="w-full h-full object-cover transistion duration-1000 ease-in-out transform hover:scale-105"
                        src="{{ collection_image | image_url }}"
                        height="full"
                        width="full"
                        loading="lazy">
                    </div>
                  </a>
                  <div class="bg-gray-100 p-6">
                    <h1 class="text-xl">{{ collection.title }}</h1>
                  </div>
                </div>
              </div>


            {% endif %}

          {% endfor %}

        </div>


      </div>



    </div>
  </div>
</div>


{% schema %}
  {
    "name": "List Collections",
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Collections"

      }
    ]
  }
{% endschema %}